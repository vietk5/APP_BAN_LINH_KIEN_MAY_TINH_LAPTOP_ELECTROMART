<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo tròn êm ái -->
    <corners android:radius="10dp" />

    <!-- Nền trắng -->
    <solid android:color="#FFFFFF" />

    <!-- Viền xám nhạt để tách sản phẩm khỏi nền -->
    <stroke
        android:width="1dp"
        android:color="#E5E7EB" />  <!-- Màu xám nhẹ -->

    <!-- Hiệu ứng đổ bóng nhẹ (dành cho Android 9+) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
