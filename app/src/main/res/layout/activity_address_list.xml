<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- HEADER CHUNG -->
    <include
        android:id="@+id/userHeader"
        layout="@layout/layout_user_header" />

    <!-- Danh sách địa chỉ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/userHeader"
        android:layout_above="@id/btn_add_address"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_place"
            android:alpha="0.3"
            app:tint="#9CA3AF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quý khách chưa lưu địa chỉ nào"
            android:textColor="#6B7280"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cập nhật địa chỉ ngay để có trải nghiệm mua hàng\nnhanh hất."
            android:textAlignment="center"
            android:textColor="#9CA3AF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Button thêm địa chỉ -->
    <Button
        android:id="@+id/btn_add_address"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/button_primary"
        android:text="Thêm địa chỉ mới"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>