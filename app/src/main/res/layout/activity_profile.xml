<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".activity.ProfileActivity">

    <!-- 1. HEADER CỐ ĐỊNH -->
    <include
        android:id="@+id/header"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- 2. NỘI DUNG CUỘN (Nằm giữa Header và Footer) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thẻ thông tin cá nhân (Dùng style thẻ của bạn) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/product_item_bg"
                android:layout_marginBottom="16dp">

                <!-- (Bạn cần thư viện CircleImageView cho cái này) -->
                <!-- implementation 'de.hdodenhof:circleimageview:3.1.0' -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#3B82F6"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lê Đức Việt"
                        android:textColor="#111827"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="viet.leduc@example.com"
                        android:textColor="#6B7280"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Menu chức năng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản của tôi"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <!-- Mục 1: Đơn hàng -->
            <LinearLayout
                android:id="@+id/menu_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/product_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_receipt"
                    app:tint="#3B82F6"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng của tôi"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#111827"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow"
                    app:tint="#A1A1A1"/>
            </LinearLayout>

            <!-- Mục 2: Địa chỉ -->
            <LinearLayout
                android:id="@+id/menu_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/product_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_place"
                    app:tint="#3B82F6"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ đã lưu"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#111827"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow"
                    app:tint="#A1A1A1"/>
            </LinearLayout>

            <!-- Nút Đăng xuất -->
            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/product_item_bg"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    app:tint="#E53935"/> <!-- Màu đỏ -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Đăng xuất"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#E53935"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 3. FOOTER CỐ ĐỊNH -->
    <include
        android:id="@+id/footer"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>