<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.AdminProductActivity">

    <!-- 1. HEADER ADMIN (Giữ nguyên include của bạn) -->
    <!-- Bạn có thể dùng layout_admin_header hoặc header_layout tùy file bạn có -->
    <include
        android:id="@+id/includeHeader"
        layout="@layout/layout_admin_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- KHU VỰC NỘI DUNG -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/includeHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 2. HÀNG FILTER CŨ (Loại + Thương hiệu) + SORT MỚI -->
        <!-- Tôi gộp chung vào 1 hàng ngang để tiết kiệm diện tích -->

        <!-- 3. THANH TÌM KIẾM + NÚT THÊM (Giao diện đẹp của bạn) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Tìm kiếm sản phẩm..."
                    android:singleLine="true"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Nút xóa tìm kiếm (Code cũ dùng btnClearSearch) -->
                <ImageButton
                    android:id="@+id/btnClearSearch"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Xóa tìm kiếm"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- Nút Thêm sản phẩm (Giữ nguyên ID btnAddProduct) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4560CE"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <!-- 4. DANH SÁCH SẢN PHẨM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <!-- Spinner Sắp xếp (MỚI - Sort theo tồn kho) -->
            <Spinner
                android:id="@+id/spnSort"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductsAdmin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_admin_product" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>