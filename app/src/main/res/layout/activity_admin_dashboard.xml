<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/adminBackground"
    android:fitsSystemWindows="true">

    <!-- HEADER CHUNG CHO ADMIN (chứa adminToolbar) -->
    <include
        android:id="@+id/adminHeader"
        layout="@layout/layout_admin_header" />

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HÀNG: KHÁCH HÀNG / SẢN PHẨM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- CARD KHÁCH HÀNG -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/adminCard"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvCustomerCount"
                            android:text="0"
                            android:textColor="@color/adminTextPrimary"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Khách hàng"
                            android:textColor="@color/adminTextSecondary"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CARD SẢN PHẨM -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/adminCard"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvProductCount"
                            android:text="0"
                            android:textColor="@color/adminTextPrimary"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Sản phẩm"
                            android:textColor="@color/adminTextSecondary"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- CARD HÀNH ĐỘNG NHANH -->

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/adminCard"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ElectroMart - Admin"
                        android:textColor="@color/adminTextPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Lưới 2 cột các nút -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="2"
                        android:useDefaultMargins="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageProducts"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="Quản lý sản phẩm"
                            android:textColor="@color/border_light"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_laptop"
                            app:iconTint="@color/border_light"
                            app:strokeColor="#FF9800" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageOrders"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="Quản lý đơn hàng"
                            android:textColor="@color/border_light"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_cart"
                            app:iconTint="@color/border_light"
                            app:strokeColor="#FF9800" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageCustomers"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="Quản lý khách hàng"
                            android:textColor="@color/border_light"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_user"
                            app:iconTint="@color/border_light"
                            app:strokeColor="#FF9800"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageRevenue"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="Quản lý doanh thu"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_revenue"
                            app:iconTint="@color/border_light"
                            android:textColor="@color/border_light"
                            app:strokeColor="#FF9800" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageVouchers"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="Quản lý voucher"
                            android:textAllCaps="false"
                            android:textColor="@color/border_light"
                            app:icon="@drawable/ic_voucher"
                            app:iconTint="@color/border_light"
                            app:strokeColor="#FF9800" />


                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginTop="80dp"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/textView5"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#CDDC39"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name" />
                <TextView
                    android:id="@+id/textView6"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#CDDC39"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_slogan" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
