<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/adminBackground"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/adminHeader"
        layout="@layout/layout_admin_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo voucher mới "
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="10dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/adminCard"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Label + Input: Code -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã voucher"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/edtCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_input"
                        android:hint="VD: NEWYEAR10"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:inputType="textCapCharacters"/>

                    <!-- Percent -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phần trăm giảm"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/edtPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_input"
                        android:hint="1 - 100"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:inputType="number"/>

                    <!-- Max -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giảm tối đa"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/edtMax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_input"
                        android:hint="(đ) có thể để trống"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:inputType="numberDecimal"/>

                    <!-- Start -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày bắt đầu"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/edtStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_input"
                        android:hint="yyyy-MM-dd"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:focusable="false"
                        android:clickable="true"/>

                    <!-- End -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày kết thúc"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/edtEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_input"
                        android:hint="yyyy-MM-dd"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:focusable="false"
                        android:clickable="true"/>

                    <!-- Qty -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số lượng phát hành"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/edtQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_input"
                        android:hint="có thể để trống"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:inputType="number"/>

                    <!-- Active -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hoạt động"
                            android:textColor="@android:color/white"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/swActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>
                    </LinearLayout>

                    <!-- Save -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Lưu voucher"
                        android:textAllCaps="false"
                        android:layout_marginTop="16dp"
                        app:backgroundTint="#FF9800"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
