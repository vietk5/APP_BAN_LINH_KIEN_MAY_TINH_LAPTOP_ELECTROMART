<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.HomeActivity">

    <!-- ðŸ§­ HEADER cá»‘ Ä‘á»‹nh -->
    <include
        android:id="@+id/header"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- ðŸ“œ Ná»˜I DUNG CUá»˜N GIá»®A -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ” Thanh tÃ¬m kiáº¿m -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#F9FAFB"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/app_name" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Nháº­p link hoáº·c tÃªn sáº£n pháº©m"
                    android:paddingHorizontal="10dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_search" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_cart"
                    app:tint="#3B82F6" />
            </LinearLayout>

            <!-- ðŸ”¹ Tabs danh má»¥c -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingHorizontal="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PC Gaming"
                        android:background="@drawable/tab_button_bg"
                        android:textColor="@android:color/black"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laptop"
                        android:background="@drawable/tab_button_bg"
                        android:textColor="@android:color/black"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tai nghe - Loa"
                        android:background="@drawable/tab_button_bg"
                        android:textColor="@android:color/black"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- ðŸ–¼ï¸ Banner quáº£ng cÃ¡o -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hero_3" />

            <!-- âš¡ Flash Sale -->
            <LinearLayout
                android:id="@+id/flashSaleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F87171"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡ FLASH SALE"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvCountdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="10:00"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFlashSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:clipToPadding="false" />
            </LinearLayout>

            <!-- ðŸ›ï¸ TiÃªu Ä‘á» khu sáº£n pháº©m -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáº£n pháº©m ná»•i báº­t"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"/>

            <!-- ðŸ“¦ Danh sÃ¡ch sáº£n pháº©m -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                android:clipToPadding="false"/>

            <!-- ðŸ†• Sáº£n pháº©m má»›i -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáº£n pháº©m má»›i"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                android:clipToPadding="false"/>

            <!-- ðŸ’» Laptop ná»•i báº­t -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laptop ná»•i báº­t"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerLaptops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                android:clipToPadding="false"/>

            <!-- ðŸŽ§ Tai nghe - Loa -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tai nghe - Loa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHeadphones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                android:clipToPadding="false"/>

        </LinearLayout>
    </ScrollView>

    <!-- âš™ï¸ FOOTER cá»‘ Ä‘á»‹nh -->
    <include
        android:id="@+id/footer"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
