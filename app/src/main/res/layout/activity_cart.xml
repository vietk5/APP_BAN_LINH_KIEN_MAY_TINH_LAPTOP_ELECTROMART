<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".activity.CartActivity">

    <!-- 1. HEADER CỐ ĐỊNH (layout/header_layout) -->
    <include
        android:id="@+id/header"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- 2. Thanh TỔNG KẾT & THANH TOÁN (Cố định phía trên Footer) -->
    <!-- Dùng style giống footer của bạn (nền trắng, đổ bóng) -->
    <LinearLayout
        android:id="@+id/layout_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Cụm thông tin tổng tiền -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.500.000 đ"
                android:textColor="#111827"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nút thanh toán (Dùng style từ file login của bạn) -->
        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textColor="@android:color/white"
            android:backgroundTint="#3B82F6"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- 3. DANH SÁCH SẢN PHẨM (Cuộn, nằm giữa Header và Summary) -->

    <!-- 4. FOOTER CỐ ĐỊNH (layout/bottom_navigation) -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_summary"
        android:layout_below="@id/header"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="58dp"
        android:clipToPadding="false"
        android:padding="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cart" />

    <include
        android:id="@+id/footer"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>