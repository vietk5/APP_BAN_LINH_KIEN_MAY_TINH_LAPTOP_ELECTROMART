<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:background="#FFFFFF">

    <!-- Ảnh sản phẩm -->
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:background="#F5F5F5" />

    </androidx.cardview.widget.CardView>

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MacBook Pro 14&quot; M3 Pro 512GB"
            android:textSize="14sp"
            android:textColor="#212121"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- Phân loại (nếu có) -->
        <TextView
            android:id="@+id/tvProductVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Màu: Space Gray"
            android:textSize="12sp"
            android:textColor="#757575"
            android:background="#F5F5F5"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />

        <!-- Giá và số lượng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Giá -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49.990.000đ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />

                <TextView
                    android:id="@+id/tvProductOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="54.990.000đ"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E" />
                <!-- paintFlags="16" = STRIKE_THRU_TEXT_FLAG -->

            </LinearLayout>

            <!-- Số lượng -->
            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="14sp"
                android:textColor="#757575" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>