<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F6F7FB">

<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="96dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <!-- ===== Search Bar (đẹp hơn) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="#2563EB" />

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Nhập link hoặc tên sản phẩm"
                    android:paddingHorizontal="12dp"
                    android:imeOptions="actionSearch"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/btnNotification"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_tbao"
                    app:tint="#111827" />

                <ImageView
                    android:id="@+id/btnCartHeader"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_cart"
                    app:tint="#2563EB" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <!-- Welcome -->
        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="6dp"
            android:text="Chào mừng bạn đến với ElectroMart"
            android:textColor="#111827"
            android:textSize="13sp"
            android:gravity="center" />

        <!-- ===== Quick Categories ===== -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="10dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- PC -->
                <LinearLayout
                    android:id="@+id/btnTabPc"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/imgTabPc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/ic_pc"
                            android:scaleType="centerInside"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PC"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Laptop -->
                <LinearLayout
                    android:id="@+id/btnTabLaptop"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/imgTabLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/ic_laptop"
                            android:scaleType="centerInside"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laptop"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Tai nghe -->
                <LinearLayout
                    android:id="@+id/btnTabHeadphone"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/imgTabHeadphone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/ic_headphones"
                            android:scaleType="centerInside"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tai nghe"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Màn hình -->
                <LinearLayout
                    android:id="@+id/btnTabMonitor"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/imgTabMonitor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/ic_monitor"
                            android:scaleType="centerInside"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màn hình"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Bàn phím -->
                <LinearLayout
                    android:id="@+id/btnTabKeyboard"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/imgTabKeyboard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/ic_keyboard"
                            android:scaleType="centerInside"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bàn phím"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Chuột -->
                <LinearLayout
                    android:id="@+id/btnTabMouse"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/imgTabMouse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/ic_mouse"
                            android:scaleType="centerInside"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuột"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- ===== Banner slider (bo góc) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Flash Sale card ===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/flashSaleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF1F2"
            app:strokeColor="#FECACA"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚡ FLASH SALE -5%"
                        android:textStyle="bold"
                        android:textColor="#BE123C"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCountdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="10:00"
                        android:textColor="#BE123C"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFlashSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Sections ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm bán chạy"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm mới"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerNewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laptop nổi bật"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLaptops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PC / Máy tính để bàn"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPCs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tai nghe"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHeadphones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loa"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSpeakers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:clipToPadding="false" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>

<!-- ✅ FAB: đúng chuẩn, neo đáy-phải, không che nội dung (vì scrollView đã paddingBottom) -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fabSpin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="Lucky spin"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="14dp"
    android:layout_marginBottom="14dp"
    app:backgroundTint="#FFFFFF"
    app:srcCompat="@drawable/ic_wheel_spin"
    app:tint="@null"
    app:fabCustomSize="56dp"
    app:maxImageSize="32dp"
    app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>



